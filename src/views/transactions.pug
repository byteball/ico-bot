extends ./hidden/common-layout

append init
	-
		title += "Transactions";
		nCurrNavLink = 1;

append metas
	meta(name="keywords" content="Obyte")

append links
	link(rel="stylesheet" href="/assets/css/table.css")
	link(rel="stylesheet" href="/assets/css/transactions.css")

append content-main

	form
		fieldset Filters:
			.row
				.col-sm-12.col-md-6.col-lg-3
					.form-group
						label(for='filter_bb_address') Obyte address
						input#t_f_bb_address.form-control(type='text', name="filter_bb_address", placeholder='enter Obyte address',
						onblur="table.actions.onChangeFilter(this)", onkeypress="table.actions.onKeyEnter(event)")
				.col-sm-12.col-md-6.col-lg-3
					.form-group
						label(for='filter_txid') txid
						input#filter_txid.form-control(type='text', name="filter_txid", placeholder='enter txid',
						onblur="table.actions.onChangeFilter(this)", onkeypress="table.actions.onKeyEnter(event)")
				.col-sm-12.col-md-6.col-lg-3
					.form-group
						label(for='filter_receiving_address') receiving address
						input#filter_receiving_address.form-control(type='text', name="filter_receiving_address", placeholder='enter receiving address',
						onblur="table.actions.onChangeFilter(this)", onkeypress="table.actions.onKeyEnter(event)")

				.col-sm-12.col-md-6.col-lg-3
					.row
						.col-sm-6
							.form-group
								label(for='filter_currency') currency
								select#filter_currency.form-control(name="filter_currency", onchange="table.actions.onChangeFilter(this)")
									option all
									option GBYTE
									option BTC
									option ETH
									option USDT
						.col-sm-6
							.form-group
								label(for='filter_stable') stable
								select#filter_stable.form-control(name="filter_stable", onchange="table.actions.onChangeFilter(this)")
									option all
									option true
									option false

	.content-table
		table.table.table-sm.table-bordered.table-striped.table-custom
			thead#thead
			tbody#tbody

	.fixed-table-pagination
		.pull-left.pagination-detail
			span.page-list
				span.btn-group.dropup
					select#limit.form-control(onchange="table.actions.onChangeLimit(this)")
						option 10
						option 25
						option 50
				|  rows per page
		.pull-right.pagination
			ul.pagination#tpagination

append scripts
	script(src="/assets/js/table.js")
	script(src="/assets/js/transactions.js")